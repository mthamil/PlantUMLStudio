<Window x:Class="PlantUmlEditor.View.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="125" Width="266" Background="#2B3C59"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".55*"/>
            <RowDefinition Height=".45*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontFamily="Segoe" VerticalAlignment="Top" HorizontalAlignment="Center" FontStretch="Condensed" FontWeight="Thin"> 
            <Run FontSize="36" Foreground="LightGray" Text="Plant"/>
            <Run FontSize="36" Foreground="White" Text="UML"/>
            <Run Foreground="LightGray" FontSize="36" FontFamily="Segoe" FontStretch="Condensed" FontWeight="Thin" Text="Editor" />
            <Run FontSize="14" Foreground="White" Text="v2.0"/>
        </TextBlock>
        <TextBlock Grid.Row="1" FontFamily="Segoe" HorizontalAlignment="Center" FontStretch="Condensed" FontWeight="Thin" FontSize="14" Foreground="White">
            Copyright © 2012
        </TextBlock>
    </Grid>
</Window>
